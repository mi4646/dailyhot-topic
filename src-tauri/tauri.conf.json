{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "HotTopicApp",
  "version": "0.1.0",
  "identifier": "com.hotrank.hotrankapp",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "热榜聚合站",
        "width": 1350,
        "height": 630,
        "resizable": true,
        "fullscreen": false,
        "maximized": false,
        "visible": true,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
